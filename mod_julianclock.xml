<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.0" client="site" method="upgrade">
	<name>Julian Clock</name>
	<author>N6REJ</author>
	<creationDate>2025 June 08</creationDate>
	<copyright>JowWow</copyright>
	<license>GNU General Public License v3. https://www.gnu.org/licenses/gpl.html</license>
	<authorEmail>troy@hallhome.us</authorEmail>
	<authorUrl>https://hallhome.us</authorUrl>
	<version>2025.06.08.1</version>
	<description>MOD_JULIANCLOCK_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_julianclock">mod_julianclock.php</filename>
		<filename>mod_julianclock.xml</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_julianclock.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.mod_julianclock.sys.ini</language>
	</languages>
	<updateservers>
		<server
			type="extension"
			name="julianClock"
			priority="1"
		>
			https://raw.githubusercontent.com/N6REJ/mod_julianclock/master/mod_julianclock_update.xml
		</server>
	</updateservers>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="clockText"
					type="text"
					class=""
					filter="string"
					default="Julian Date"
					label="MOD_JULIANCLOCK_CLOCK_TEXT_LABEL"
					description="MOD_JULIANCLOCK_CLOCK_TEXT_DESC"
				/>
				<field
					name="position"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_JULIANCLOCK_POSITION_TEXT_LABEL"
					description="MOD_JULIANCLOCK_POSTION_TEXT_DESC"
				>			
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="updateInterval"
					type="text"
					class=""
					filter="int"
					default="1000"
					label="MOD_JULIANCLOCK_UPDATE_INTERVAL_LABEL"
					description="MOD_JULIANCLOCK_UPDATE_INTERVAL_DESC"
				/>
				<field name="precision"
					   type="integer"
					   last="10"
					   first="0"
					   step="1"
					   default="5"
					   label="MOD_JULIANCLOCK_PRECISION_LABEL"
					   description="MOD_JULIANCLOCK_PRECISION_LABEL"
				/>
				<field
					name="icon"
					type="text"
					class=""
					filter="string"
					default=""
					label="MOD_JULIANCLOCK_ICON_LABEL"
					description="MOD_JULIANCLOCK_ICON_DESC"
				/>
			</fieldset>
			<fieldset name="advanced">		
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
